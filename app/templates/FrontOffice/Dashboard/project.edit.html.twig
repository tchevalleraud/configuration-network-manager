{% extends "FrontOffice/Dashboard/project._base.html.twig" %}

{% block sub_menu_title %}
    {% if node.config.system.hostName is defined %}
        {% if node.config.system.hostName != null %}
            {{ project.name }} - {{ node.config.system.hostName }}
        {% else %}
            {{ project.name }}
        {% endif %}
    {% else %}
        {{ project.name }}
    {% endif %}
{% endblock %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col-8">
            {{ form_start(form) }}
            {% include "_forms/input.text.html.twig" with { 'form': form.name } %}
            {% include "_forms/input.text.html.twig" with { 'form': form.description } %}
            {% include "_forms/input.text.html.twig" with { 'form': form.sourceModel } %}
            {% include "_forms/input.text.html.twig" with { 'form': form.sourceConfigFile } %}
            {% include "_forms/input.text.html.twig" with { 'form': form.destinationModel } %}
            <div class="row pt-4">
                <div class="col-12 text-end">
                    {{ form_widget(form.submit) }}
                </div>
            </div>
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}